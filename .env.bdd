# BDD Test Environment Configuration
# Purpose: Run WebSocket Gateway tests without database dependency
# Usage: NODE_ENV=test node scripts/bdd-tests/test-runner.js

# Application
NODE_ENV=test
PORT=3001

# Database (DISABLED for BDD tests - WebSocket only)
DATABASE_ENABLED=false
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=collabornest_bdd_test

# JWT Configuration (for test authentication)
JWT_SECRET=test-secret-key-change-in-production
JWT_EXPIRES_IN=1h

# Logging (minimal for BDD tests)
LOG_LEVEL=error
LOG_MAX_FILES=1d
LOG_MAX_SIZE=10m
LOG_TIMEZONE=Europe/Rome
