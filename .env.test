# Test Environment Configuration
# Purpose: Unit and E2E tests without requiring database
# Note: Database integration tests use test/database.integration.spec.ts with Docker

# Application
NODE_ENV=test
PORT=3001

# Database (DISABLED by default - enable in specific integration tests)
DATABASE_ENABLED=false
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=collabornest_test

# JWT Configuration
JWT_SECRET=test-secret-key-change-in-production
JWT_EXPIRES_IN=1h

# Logging (error level only for tests)
LOG_LEVEL=error
LOG_MAX_FILES=1d
LOG_MAX_SIZE=10m
LOG_TIMEZONE=Europe/Rome
