# Test environment variables
NODE_ENV=test
PORT=3001

# Test Database Configuration (matching docker-compose)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=user
DATABASE_PASSWORD=secure_password_change_me
DATABASE_NAME=app_db

# JWT Configuration for tests
JWT_SECRET=this_is_a_very_long_test_jwt_secret_key_with_32_chars_minimum
JWT_EXPIRES_IN=1d
JWT_ISSUER=collabornest-test
JWT_AUDIENCE=collabornest-api

# WebSocket Gateway Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001
WEBSOCKET_NAMESPACE=/collaboration
WEBSOCKET_CORS_ORIGIN=*
WEBSOCKET_TRANSPORTS=websocket,polling

# WebSocket Heartbeat/Ping-Pong
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_PING_TIMEOUT=20000

# WebSocket Connection Limits
WEBSOCKET_MAX_CONNECTIONS_PER_USER=5

# WebSocket Room Limits
WEBSOCKET_ROOM_LIMIT_RESOURCE=20
WEBSOCKET_ROOM_LIMIT_ADMIN=5
WEBSOCKET_ROOM_LIMIT_CHAT=100
WEBSOCKET_ROOM_LIMIT_DEFAULT=50

# WebSocket Lock Configuration (BE-001.3)
WEBSOCKET_LOCK_TTL=10800000
WEBSOCKET_LOCK_WARNING_TIME=900000
WEBSOCKET_LOCK_SWEEP_INTERVAL=60000
WEBSOCKET_HEARTBEAT_INTERVAL=60000

# Logging Configuration for tests
LOG_LEVEL=error
LOG_MAX_FILES=1d
LOG_MAX_SIZE=10m
LOG_TIMEZONE=Europe/Rome
