{
  "name": "collabornest-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Collaborative layer for Node/NestJS applications",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm -r run test:e2e",
    "test:cov": "pnpm -r run test:cov",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "quality": "pnpm lint && pnpm format:check && pnpm test",
    "quality:fix": "pnpm lint:fix && pnpm format",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "collaboration",
    "real-time",
    "socket.io",
    "nestjs",
    "redis",
    "rabbitmq",
    "presence",
    "locking",
    "healthcare",
    "enterprise"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/collabornest.git"
  },
  "author": "CollaborNest Contributors",
  "license": "MIT"
}
