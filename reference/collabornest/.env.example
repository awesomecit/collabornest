# Node Environment
NODE_ENV=development

# Server
PORT=3000
HOST=localhost

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_KEY_PREFIX=collab:

# RabbitMQ
RABBITMQ_URL=amqp://collab:collab@localhost:5672
RABBITMQ_EXCHANGE=collab.events
RABBITMQ_QUEUE_PREFIX=collab

# PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=collabornest
DATABASE_USER=collab
DATABASE_PASSWORD=collab
DATABASE_SSL=false

# Socket.IO
SOCKET_NAMESPACE=/collab
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Limits
MAX_EDITORS_PER_RESOURCE=2
MAX_VIEWERS_PER_RESOURCE=20
MAX_EDITORS_PER_SUBRESOURCE=1
MAX_VIEWERS_PER_SUBRESOURCE=5

# Lock
DEFAULT_LOCK_TTL_MS=300000
MAX_LOCK_DURATION_MS=3600000
AUTO_UNLOCK_ON_DISCONNECT=true

# Presence
HEARTBEAT_INTERVAL_MS=15000
STALE_THRESHOLD_MS=45000
CLEANUP_INTERVAL_MS=60000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# JWT (if using authentication)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=7d
