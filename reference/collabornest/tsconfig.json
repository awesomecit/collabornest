{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@collab/core": ["packages/@collab/core/src"],
      "@collab/presence": ["packages/@collab/presence/src"],
      "@collab/lock": ["packages/@collab/lock/src"],
      "@collab/monitor": ["packages/@collab/monitor/src"],
      "@collab/adapters": ["packages/@collab/adapters/src"],
      "@collab/sdk": ["packages/@collab/sdk/src"]
    }
  },
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
